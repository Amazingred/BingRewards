                    cmd="/home/BingRewards/bin/BingRewards/notify/onComplete.sh %a %p %r %P %l %i" />
            <notify if="%P gt 475"
                    cmd="/home/BingRewards/bin/BingRewards/notify/onComplete.sh %a %p %r %P %l %i" />

            <account ref="Live_gogo@hotmail.com">
                <retry if="%p lt 16" interval="5" salt="3.5" count="3" />
